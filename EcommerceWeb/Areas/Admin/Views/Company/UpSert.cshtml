@model Company
@{
    ViewData["Title"] = (Model.ID != 0 ? "Update" : "Create New") + " Company";
}
<div class="card shadow border-0 my-4">

    <div class="card-header bg-secondary bg-gradient m-lg-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.ID != 0 ? "Update " : "Create New ")Company </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ID" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating py-2 col-12">
                            <label class="p-0" asp-for="Name" class="text-muted ms-2"></label>
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <label class="p-0" asp-for="StreetAddress" class="text-muted ms-2"></label>
                            <input asp-for="StreetAddress" class="form-control border-0 shadow" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="py-2 col-12">
                            <label class="ms-2 text-muted" asp-for="City"></label>
                            <input asp-for="City" class="form-control border-0 shadow">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label class="p-0" asp-for="State"></label>
                            <input asp-for="State" class="form-control border-0 shadow" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label class="p-0" asp-for="PostalCode"></label>
                            <input asp-for="PostalCode" class="form-control border-0 shadow" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label class="p-0" asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row pb-5 pt-4">
                            <div class="col-6 col-md-3">
                                @if (Model.ID != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">All Companies</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
}